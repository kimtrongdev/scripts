{
  "name": "ViewerViewer",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions": ["browsingData", "webRequest","webRequestBlocking","nativeMessaging","activeTab", "declarativeContent", "storage","tabs","webNavigation","clipboardRead","clipboardWrite","http://*/","https://*/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "user_utils.js",
        "watch_youtube.js",
        "content.js",
        "./scripts/search.js",
        "./scripts/brave.js",
        "./scripts/direct_link.js"
      ]
    },
    {
      "matches": [
        "https://payments.google.com/*"
      ],
      "js": ["user_utils.js","watch_youtube.js","content.js"],
      "all_frames":true
    }
  ],
  "manifest_version": 2
}
